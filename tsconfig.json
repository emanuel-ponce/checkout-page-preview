{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "@slices/*": ["state/slices/*"],
      "@models/*": ["shared/models/*"],
      "@utils/*": ["shared/utils/*"],
      "@pages/*": ["pages/*"],
      "@globalStyles": ["styles/globals.css"],
      "@layouts/*": ["layouts/*"],
      "@components/*": ["components/*"],
      "@shared/*": ["shared/*"],
      "store": ["state/store/store.ts"]
    }
  },
  "include": ["next-env.d.ts", "types.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
